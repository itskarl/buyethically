             <div class="letterscore" style="background: linear-gradient(0.25turn, rgb(193, 58, 55) 30%, transparent)"> F </div>
          </div>
           <% when 50 %>
           <div class="letter-visuals">
             <div class="letterscore" style="background: linear-gradient(0.25turn, rgb(140, 140, 140) 30%, transparent)"> ? </div>

          </div>
           <% when 51..64 %>
           <div class="letter-visuals">
             <div class="letterscore" style="background: linear-gradient(0.25turn, rgb(228, 149, 57) 30%, transparent)"> D </div>

          </div>
           <% when 65..75 %>
