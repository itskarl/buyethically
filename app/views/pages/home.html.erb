             <div class="letterscore" style="background: linear-gradient(0.25turn, rgb(224, 222, 61) 30%, transparent)"> C </div>

          </div>
           <% when 76..85 %>
           <div class="letter-visuals">
             <div class="letterscore" style="background: linear-gradient(0.25turn, rgb(121, 153, 63) 30%, transparent)"> B </div>

         </div>
           <% when 86..100 %>
           <div class="letter-visuals">
             <div class="letterscore" style="background: linear-gradient(0.25turn, rgb(102, 171, 82) 30%, transparent)"> A </div>
          </div>
